<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".init.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tvUserMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="20sp" />

        <Button
                android:id="@+id/btnDownloadUserData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="68dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:padding="15dp"
                android:text="@string/download_user_data"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="20sp"
                tools:text="Count" />

        <Button
                android:id="@+id/btnCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:padding="15dp"
                android:text="@string/click_here"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <Button
                android:id="@+id/btnJobCoroutine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:padding="15dp"
                android:text="Job Coroutine"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <Button
                android:id="@+id/btnDeferredCoroutine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:padding="15dp"
                android:text="Deferred Coroutine"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <Button
                android:id="@+id/btnConcurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:padding="15dp"
                android:text="Concurrency"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <Button
                android:id="@+id/btnViewModelExample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:padding="15dp"
                android:text="ViewModel Demo"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <Button
                android:id="@+id/btnRetrofitExample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:padding="15dp"
                android:text="Retrofit Demo"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <Button
                android:id="@+id/btnRoomExample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:padding="15dp"
                android:text="Room Demo"
                android:textColor="@android:color/white"
                android:textSize="24sp" />


    </LinearLayout>

</ScrollView>